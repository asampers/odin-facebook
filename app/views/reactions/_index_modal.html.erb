<%= turbo_frame_tag :remote_modal, target: :_top do %>
<div class="modal fade" data-controller="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Liked by:</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <% @post.reactions.includes(:user).each do |reaction| %>
          <%= render "reactions/reactor", user: reaction.user  %>
        <% end %>
      </div>   
    </div> 
  </div>      
</div>
<% end %>