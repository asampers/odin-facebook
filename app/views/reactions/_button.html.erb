<% reaction = current_user.reactions.find_by(reactable: reactable) %>

<% if reaction.nil? %>
  <%= button_to reactions_path, params: { reaction: { reactable_id: reactable.id, reactable_type: reactable.class}}, 
                  method: :post, class: " text-nowrap btn border border-primary" do %>
                  <ion-icon name="thumbs-up" class=" text-primary"></ion-icon>
                  <%= "Like" if reactable.class == Post %>  
                  <%=reactable.reactions.count if reactable.class == Comment %> 
  <% end %>                           
<% else %>
  <%= button_to reaction_path(reaction), method: :delete,
                  class: " text-nowrap btn btn-primary" do %>
                  <ion-icon name="thumbs-up"></ion-icon> 
                  <%= "Unlike" if reactable.class == Post %> 
                  <%=reactable.reactions.count if reactable.class == Comment %>
  <% end %>                 
<% end %>   