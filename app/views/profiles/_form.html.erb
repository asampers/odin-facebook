<%= form_with model: @profile  do |f| %>
    <%= f.label :full_name, class: "form-label"%>
    <%= f.text_field :full_name, class: "form-control" %>
    <%= f.label :location, class: "form-label"%>
    <%= f.text_field :location, class: "form-control" %>
    <%= f.label :age, class: "form-label"%>
    <%= f.number_field :age, class: "form-control"  %>
    <%= f.label :bio, class: "form-label"%>
    <%= f.text_area :bio, placeholder: "Tell us a little about yourself...", class:"form-control" %>
  <div class="d-flex justify-content-end">  
    <%= link_to "Cancel", :back, class: "btn btn-outline-primary me-2" %>
    <%= f.submit 'Save', class:"btn btn-primary"%>
  </div>  
<% end %>
 