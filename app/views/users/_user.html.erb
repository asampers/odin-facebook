<div id="<%= dom_id user %>">
  <ul class="list-group">
    <li class="d-flex align-items-center justify-content-between list-group-item"> 
      <div><%= image_tag user.gravatar_url(default: :mm), class:"rounded-circle img-fluid me-2" %>
        <%= link_to "#{user.username}", user_path(user.id), class: "align-items-center me-2" %> 
      </div>
      <%= render 'friend_form', user: user %>
    </li>
  </ul>
</div>
