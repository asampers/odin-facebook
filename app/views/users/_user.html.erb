<div id="<%= dom_id user %>">
  <li class="list-group-item mb-1 rounded user"> 
    <%= image_tag user.gravatar_url(default: :mm), class:"rounded-circle img-fluid gravatar-home me-2" %>
    <%= link_to "#{user.username}", user_path(user.id), class: "align-items-center me-2" %> 
      
    <span class="float-end"><%= render 'friend_form', user: user %></span>
  </li>
</div>
