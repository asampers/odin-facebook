<div id="<%= dom_id user %>">
  <li class="d-flex justify-content-between align-items-center list-group-item mb-1 rounded user"> 
    <div>
    <%= image_tag user.gravatar_url(default: :mm), class:"rounded-circle img-fluid gravatar-home me-2" %>
    <%= link_to "#{user.username}", user_path(user.id), class: "me-2" %> 
    </div>  
    <div><%= render 'users/friend_form', user: user %></div>
  </li>
</div>
