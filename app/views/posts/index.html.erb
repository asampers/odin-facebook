<span class="d-flex align-items-end justify-content-between">
  <% if request.original_url.include?('true') %>
    <%= link_to "All Posts", root_path, class:"all-post-feed text-secondary text-decoration-none" %><h1 class="mt-2">Your Feed</h1>
  <% else %>
    <h1 class="mt-2">All Posts</h1> <%= link_to "Your Feed", posts_path(feed: true), class:"all-post-feed text-secondary text-decoration-none" %>
  <% end %>
</span>

<div class="container mt-3 mb-4 pb-3 border shadow-sm rounded post">
  <%= turbo_frame_tag id="new_post", src:new_post_path %>
</div> 

<div id="posts">
<% @posts.each do |post| %>
  <%= turbo_frame_tag post do %>
      <%= render post%>
  <% end %>  
<% end %>   
</div>
<%= render "pager", posts: @posts %>

<div id=info class="text-center mb-1">
  <%= page_entries_info @posts %>
</div>

<div class="text-center pb-3"><a href="#top" data-controller="scroll-to">Go to Top</a></div>

<%= render 'layouts/shared/popular_posts' %>
<%= render 'layouts/shared/newest_users' %>

 