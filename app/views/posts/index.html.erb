<div class="container mt-3 mb-4 p-3 border shadow-sm rounded post">
  <%= turbo_frame_tag id="new_post", src:new_post_path %>
</div> 

<div id="posts">
<% @posts.each do |post| %>
  <%= turbo_frame_tag post do %>
      <%= render post%>
  <% end %>  
<% end %>   
</div>
<%= render "pager", posts: @posts %>

<div id=info class="text-center mb-1">
  <%= page_entries_info @posts %> 
</div>

<%= render 'layouts/popular_posts' %>
<%= render 'layouts/newest_users' %>

 