<div id="<%= dom_id post %>">
  <div class="container mt-3 mb-4 p-3 border shadow-sm rounded">
    <div class="row">
      <div class="d-flex justify-content-between">
        <div><%= image_tag post.user.gravatar_url(default: :mm), class:"rounded-circle me-2 gravatar-home" %>
              <%= link_to "#{post.user.username}", user_path(post.user.id),
                    class:"fw-semibold text-primary text-decoration-none" %>
        </div>            
        <p class="text-secondary small"><%= time_ago_in_words(post.created_at) %> ago </p>           
      </div>
      <div class="container mb-3">
        <p class="fs-5" style="word-wrap: break-word"> <%= post.body %> </p>  
      </div>
      <div class="d-flex justify-content-between ">
          <%= turbo_frame_tag "post_#{post.id}_like_count" do %>
            <div class="d-inline-flex align-items-center">
              <a class="text-secondary like-count text-decoration-none ms-2 me-3" data-bs-toggle="modal" href="#collapseReaction<%= post.id%>" role="button"> 
                <% cache do %>
                <%= pluralize(post.reactions.size, "Like") unless post.reactions.nil? %>
                <% end %>
              </a> 
              <%= render partial: "reactions/button", locals: { reactable: post } %> 
            </div> 
          <% end %>  
          <div class="d-inline-flex align-items-center">       
            <button type="button" class="btn btn-primary text-nowrap ms-2 me-3" data-bs-toggle="modal" 
                data-bs-target="#commentModal<%= post.id %>"><ion-icon name="chatbubbles"></ion-icon>
            </button> 
          <%= turbo_frame_tag "post_#{post.id}_comment_count" do %>  
            <a class=" text-secondary text-decoration-none" data-bs-toggle="collapse" href="#collapseComment<%= post.id%>" role="button"> 
              <%= pluralize(post.comments.size, "Comment") %>
            </a>
          <% end %>     
          </div>
      </div>
 
      
      <div class="collapse" id="collapseComment<%= post.id %>">
        <%= render "comments/comments", comments: post.comments, post: post, cached: true %>
      </div> 

      <div class="modal" id="collapseReaction<%= post.id %>">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Liked by:</h4>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <% post.reactions.each do |reaction| %>
                <%= render "reactions/reactor", user: reaction.user  %>
              <% end %>
            </div>   
          </div> 
        </div>      
      </div>   
    </div>
  </div>
</div>

<div class="modal" id="commentModal<%= post.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">New Comment</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= turbo_frame_tag @comment do %>
          <%= render "comments/form", post: post, parent: nil %>
        <% end %>
      </div>
    </div>
  </div>
</div> 