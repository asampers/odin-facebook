<% comments.includes(:parent, {comments:[:parent]}, :user).each do |comment|%>
  <div id="<%= dom_id comment %>">
    <%= turbo_frame_tag comment do %>
      <% unless comment.parent %>
        <%= render 'comments/comment', comment: comment, post: post %>  
      <% end %>    
    <% end %>
  </div>    
<% end %>


