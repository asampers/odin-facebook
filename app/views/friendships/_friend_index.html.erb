<% if current_user == @user %>
  <% @friends = 'users/user' %>
<% else %>  
  <% @friends = 'friendships/friend' %>
<% end %> 

<ul class="list-group">
<% @accepted_friends.each do |friend| %>
  <% next if friend == @user %>
  <%= render @friends, user: friend %>
<% end %> 

<% if @pending_friends.any? && current_user == @user %>
  <h5 class="mt-1"> <%= "Pending Requests" %> </h5>

  <% @pending_friends.each do |friend| %>
    <% next if friend == @user %>
    <%= render @friends, user: friend %>
  <% end %>
<% end %>  
</ul>